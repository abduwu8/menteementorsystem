{
  "name": "oviedu",
  "version": "1.0.0",
  "description": "OviEdu Mentoring Platform",
  "main": "backend/index.js",
  "scripts": {
    "start": "cd backend && npm start",
    "install-frontend": "cd frontend && npm install --legacy-peer-deps --production=false",
    "install-backend": "cd backend && npm install --legacy-peer-deps",
    "build-frontend": "cd frontend && npm run build",
    "build": "npm install && npm run install-frontend && npm run build-frontend && npm run install-backend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
